<div class="swiper-slide testimonial-slide">
  <img
    class="testimonial-slide__image"
    src="{{ testimonial.image }}"
    alt="customer"
  />
  <svg class="testimonial-slide__rating" width="122" height="27">
    <use href="./images/icons.svg#icon-stars"></use>
  </svg>
  <p class="testimonial-slide__comment">
    {{ testimonial.comment }}
  </p>
  <h6 class="text text--h6">{{ testimonial.name }}</h6>
  <span class="testimonial-slide__label">{{ testimonial.label }}</span>
</div>
