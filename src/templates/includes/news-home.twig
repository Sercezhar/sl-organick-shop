<section class="news-home">
	<div class="news-home__container">
		<div class="news-home__header">
			<div>
				<p class="pretitle">News</p>
				<h2 class="text text--h2">
					Discover weekly content about organic food & more
				</h2>
			</div>

			{% include './../components/button.twig' with
				{
					'text': 'More News',
      		classes: 'button-common button-common--white'
				}
			%}
		</div>

		<ul class="blogs">
			{% for blog in blogs|slice(0, 2) %}
				{% include './../components/blog-post.twig' %}
			{% endfor %}
		</ul>
	</div>
</section>
